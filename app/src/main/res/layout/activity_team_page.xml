<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_arrow_back_ios_24"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/nithraconnect"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's connect"
                android:textSize="25dp"
                android:textColor="#BA9696"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="together as Team"
                android:textSize="25dp"
                android:layout_marginStart="70dp"
                android:textColor="#BA9696" />

            <androidx.cardview.widget.CardView
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-35dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/departments"
                                android:layout_margin="10dp"
                                android:layout_width="140dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#69D1A9"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/group_71"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="15dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Android Team"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12dp"
                                        android:layout_marginTop="28dp"
                                        android:layout_marginStart="5dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/webapplication"
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/white">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#F03667"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/group_72"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginTop="15dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Web Application"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:layout_marginTop="28dp"
                                            android:layout_marginStart="5dp"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/ios"
                                android:visibility="gone"
                                android:layout_width="140dp"
                                android:layout_height="80dp"
                              android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#FEC52D"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/group_74"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="15dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="ios Apps"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12dp"
                                        android:layout_marginTop="28dp"
                                        android:layout_marginStart="5dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/android"
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/white">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#FEC52D"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/group_76"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginTop="15dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Android Apps"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:layout_marginTop="28dp"
                                            android:layout_marginStart="5dp"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/photo"
                                android:layout_width="140dp"
                                android:layout_height="80dp"
                               android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#6879E1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/group_73"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="15dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Photos"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12dp"
                                        android:layout_marginTop="28dp"
                                        android:layout_marginStart="5dp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/branch"
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/white">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#EC6954"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:src="@drawable/group_75"
                                            android:layout_marginTop="15dp"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Branch"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:layout_marginTop="28dp"
                                            android:layout_marginStart="5dp"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/nithra"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

