<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/nithraconnect"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardBackgroundColor="#6926F1"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABOUT COMPANY"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="VISION"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="To be admired by people for our products,culture and values which in turn impact the societh at large."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="MISSION"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="15dp"
                android:text="Empower people through our products and services to uplift their life."/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/nithralogo"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/nextceo"
        android:layout_width="300dp"
        android:layout_marginStart="30dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="#F12648"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Meet CEO"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/gotohome"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="#F6F3F3"
        app:cardCornerRadius="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="Goto Home"
            android:textColor="#C6A8A8"
            android:textStyle="bold"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>